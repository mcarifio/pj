# ln -sr .spjs/pj/bin/.envrc; direnv allow .
# Note that the bootstrapper below does *not* lift .envrc because you may not prefer direnv.

# Project name and folder layout
export PROJECT=explore.ts
# bash assumed
export PROOT=$(realpath -Lm $(dirname ${BASH_SOURCE%*/}))
# .subtrees are the git subtrees under PROOT. .subtrees/pj is assumed.
export SUBTREES=${PROOT}/.subtrees

# Bootstrap the dev environment via a makefile
export BOOTSTRAPPER="${SUBTREES}/pj/bin/Makefile"
[[ -r  "${BOOTSTRAPPER}" ]] && make --check-symlink-times --quiet --makefile="${BOOTSTRAPPER}" bootstrap check

PATH_add $(find ${SUBTREES} -type d -name bin)




    

   


